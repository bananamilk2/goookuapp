<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.howard.myapplication.eventloop.VideoPlayerView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="600px"
        android:layout_height="360px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30px"
        android:background="@mipmap/dasha_01">

        <ImageView
            android:layout_width="254dp"
            android:layout_height="155dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical" />


        <ImageView
            android:id="@+id/from_avator"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/from_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/from_avator"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="呵呵呵呵呵呵呵"
            android:textColor="#FFFFFF"
            android:textSize="40px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/from_name">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50px"
                android:layout_marginTop="15dp"
                android:text="打赏给"
                android:textColor="#ffff11"
                android:textSize="60px"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/to_avator"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher"
                />

            <TextView
                android:id="@+id/to_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="13dp"
                android:layout_toEndOf="@+id/to_avator"
                android:text="么么哒"
                android:textColor="#FFFFFF"
                android:textSize="60px" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>